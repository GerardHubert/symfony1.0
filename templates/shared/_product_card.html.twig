<div class="card">
	<img src={{ product.mainPicture }} class='img-fluid' alt="image du produit"/>
	<div class="card-body">
		<h4 class="card-title">{{ product.name }}
			({{ product.price|price}})</h4>
		<a href="{{ path('product_category', {'slug' : product.category.slug}) }}">
			<span class="badge bg-info">{{ product.category.name }}</span>
		</a>
		<p class="card-text">{{ product.shortDescription }}</p>
		<a href={{ path('product_show', {'category_slug' : product.category.slug, 'slug' : product.slug} ) }} class="btn btn-outline-primary btn-sm">DÃ©tails</a>
		<a href="{{ path("cart_add", {'id': product.id}) }}" class="btn btn-outline-success btn-sm">Ajouter</a>
	</div>
</div>
