{% extends 'base.html.twig' %}

{% block title %}
	Connexion
{% endblock %}

{% block body %}
	<h1>Connexion</h1>

	{% if error %}
		<div class="alert alert-danger">
			{{ error.message }}
		</div>
	{% endif %}

	{{ form_start(formView, {attr: {'novalidate': 'novalidate'}}) }}

	{{ form_errors(formView) }}

	{{ form_widget(formView) }}

	<button type="submit" class="btn btn-success mt-2">LogIn</button>

	{{ form_end(formView) }}
	{% if app.user is null %}
		<a href="{{ path("security_forgottenPassword") }}">
			<button class="btn btn-success mt-2">Mot de passe oubli√©</button>
		</a>
	{% endif %}

	{% block javascripts %}
		<script src="/JS/formError.js"></script>
	{% endblock %}
{% endblock %}
