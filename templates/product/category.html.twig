{% extends "base.html.twig" %}

{% block title %}
	Categorie :
	{{ category.name }}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">{{ category.name }}</li>
	</ol>

	<h1>Cat√©gorie :
		{{ category.name }}</h1>

	<div class="row">
		{% for product in category.products %}
			<div class="col-3">
				{% include "shared/_product_card.html.twig" with {
					'product': product
				} %}
			</div>
		{% endfor %}
	</div>

{% endblock %}
